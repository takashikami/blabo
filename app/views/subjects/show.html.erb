<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @subject.title %>
</p>

<p>
  <strong>Pic:</strong>
  <img src="/files/<%= @subject.id %>">

</p>

<p>
  <strong>Quote:</strong>
  <%= @subject.quote %>
</p>

<%= render partial: 'comment_form' %>

<% @subject.comments.each do |comment| %>
<p>
  <%= comment.comment %>
</p>
<% end %>

<%= link_to 'Edit', edit_subject_path(@subject) %> |
